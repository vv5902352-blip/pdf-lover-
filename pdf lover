        // Initialize tool-specific functionality
        function initializeToolFunctionality(toolId) {
            const uploadArea = document.getElementById('uploadArea');
            const browseFilesBtn = document.getElementById('browseFiles');
            const processToolBtn = document.getElementById('processTool');
            const statusMessage = document.getElementById('statusMessage');
            const previewArea = document.getElementById('previewArea');
            const previewContent = document.getElementById('previewContent');
            const downloadBtn = document.getElementById('downloadBtn');
            
            // File upload functionality for tools that need it
            if (uploadArea && browseFilesBtn && toolId <= 21) {
                // Drag and drop functionality
                uploadArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    uploadArea.classList.add('dragover');
                });
                
                uploadArea.addEventListener('dragleave', () => {
                    uploadArea.classList.remove('dragover');
                });
                
                uploadArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    uploadArea.classList.remove('dragover');
                    simulateFileProcessing(toolId);
                });
                
                browseFilesBtn.addEventListener('click', () => {
                    simulateFileProcessing(toolId);
                });
            }
            
            // Process tool button
            if (processToolBtn) {
                processToolBtn.addEventListener('click', () => {
                    if (toolId <= 21) {
                        simulateFileProcessing(toolId);
                    } else {
                        processUtilityTool(toolId);
                    }
                });
            }
            
            // Tool-specific initialization
            if (toolId === 22) {
                // QR Code Generator
                const qrText = document.getElementById('qrText');
                const qrSize = document.getElementById('qrSize');
                
                if (qrText && qrSize) {
                    qrText.addEventListener('input', () => {
                        if (qrText.value.trim()) {
                            previewArea.style.display = 'block';
                            previewContent.innerHTML = `<p>QR Code for: ${qrText.value}</p><div style="width: 200px; height: 200px; background-color: #ccc; margin: 0 auto;"></div>`;
                        }
                    });
                }
            } else if (toolId === 23) {
                // Password Generator
                const passwordLength = document.getElementById('passwordLength');
                const lengthValue = document.getElementById('lengthValue');
                
                if (passwordLength && lengthValue) {
                    passwordLength.addEventListener('input', () => {
                        lengthValue.textContent = `${passwordLength.value} characters`;
                    });
                }
            } else if (toolId === 25) {
                // Text to Speech
                const speechRate = document.getElementById('speechRate');
                const rateValue = document.getElementById('rateValue');
                
                if (speechRate && rateValue) {
                    speechRate.addEventListener('input', () => {
                        rateValue.textContent = speechRate.value;
                    });
                }
            } else if (toolId === 26) {
                // Speech to Text
                const startRecordingBtn = document.getElementById('startRecording');
                const stopRecordingBtn = document.getElementById('stopRecording');
                
                if (startRecordingBtn && stopRecordingBtn) {
                    startRecordingBtn.addEventListener('click', () => {
                        startRecordingBtn.style.display = 'none';
                        stopRecordingBtn.style.display = 'inline-block';
                        statusMessage.textContent = 'Listening... Speak now.';
                        statusMessage.className = 'status-message status-processing active';
                        
                        // Simulate speech recognition
                        setTimeout(() => {
                            stopRecordingBtn.click();
                        }, 3000);
                    });
                    
                    stopRecordingBtn.addEventListener('click', () => {
                        startRecordingBtn.style.display = 'inline-block';
                        stopRecordingBtn.style.display = 'none';
                        statusMessage.textContent = 'Speech recognized successfully!';
                        statusMessage.className = 'status-message status-done active';
                        
                        previewArea.style.display = 'block';
                        previewContent.innerHTML = '<p>This is a simulated transcript of your speech. In a real application, this would be the actual text from your voice input.</p><p>"Hello, this is a demonstration of the speech to text functionality. This tool would convert your spoken words into written text."</p>';
                    });
                }
            } else if (toolId === 29) {
                // Color Picker
                const colorPicker = document.getElementById('colorPicker');
                const colorPreview = document.getElementById('colorPreview');
                const colorValue = document.getElementById('colorValue');
                
                if (colorPicker && colorPreview && colorValue) {
                    colorPicker.addEventListener('input', () => {
                        const color = colorPicker.value;
                        colorPreview.style.backgroundColor = color;
                        colorValue.textContent = color.toUpperCase();
                    });
                }
            } else if (toolId === 32) {
                // Timer/Stopwatch
                let timerInterval = null;
                let seconds = 0;
                let isRunning = false;
                const timeDisplay = document.getElementById('timeDisplay');
                const startTimerBtn = document.getElementById('startTimer');
                const pauseTimerBtn = document.getElementById('pauseTimer');
                const resetTimerBtn = document.getElementById('resetTimer');
                const setTimerBtn = document.getElementById('setTimer');
                const timerMinutes = document.getElementById('timerMinutes');
                
                function updateTimeDisplay() {
                    const hrs = Math.floor(seconds / 3600);
                    const mins = Math.floor((seconds % 3600) / 60);
                    const secs = seconds % 60;
                    
                    timeDisplay.textContent = 
                        `${hrs.toString().padStart(2, '0')}:${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
                }
                
                function startTimer() {
                    if (!isRunning) {
                        isRunning = true;
                        timerInterval = setInterval(() => {
                            seconds++;
                            updateTimeDisplay();
                        }, 1000);
                    }
                }
                
                function pauseTimer() {
                    isRunning = false;
                    clearInterval(timerInterval);
                }
                
                function resetTimer() {
                    pauseTimer();
                    seconds = 0;
                    updateTimeDisplay();
                }
                
                if (startTimerBtn) startTimerBtn.addEventListener('click', startTimer);
                if (pauseTimerBtn) pauseTimerBtn.addEventListener('click', pauseTimer);
                if (resetTimerBtn) resetTimerBtn.addEventListener('click', resetTimer);
                
                if (setTimerBtn && timerMinutes) {
                    setTimerBtn.addEventListener('click', () => {
                        const minutes = parseInt(timerMinutes.value) || 5;
                        seconds = minutes * 60;
                        updateTimeDisplay();
                    });
                }
                
                updateTimeDisplay();
            }
        }
        
        // Simulate file processing
        function simulateFileProcessing(toolId) {
            const statusMessage = document.getElementById('statusMessage');
            const previewArea = document.getElementById('previewArea');
            const previewContent = document.getElementById('previewContent');
            const downloadBtn = document.getElementById('downloadBtn');
            
            // Show uploading status
            statusMessage.textContent = 'Uploading...';
            statusMessage.className = 'status-message status-uploading active processing';
            
            // Simulate upload delay
            setTimeout(() => {
                statusMessage.textContent = 'Processing...';
                statusMessage.className = 'status-message status-processing active processing';
                
                // Simulate processing delay
                setTimeout(() => {
                    statusMessage.textContent = 'Done! File processed successfully.';
                    statusMessage.className = 'status-message status-done active';
                    statusMessage.classList.remove('processing');
                    
                    // Show preview area
                    previewArea.style.display = 'block';
                    
                    // Show appropriate preview based on tool
                    if (toolId <= 17) {
                        previewContent.innerHTML = `
                            <p><i class="fas fa-file-pdf" style="font-size: 3rem; color: var(--accent-cyan);"></i></p>
                            <p>PDF file processed successfully</p>
                            <p>Size: 2.4 MB  1.1 MB (54% reduction)</p>
                        `;
                    } else if (toolId >= 18 && toolId <= 21) {
                        const fileType = toolId === 18 || toolId === 19 ? 'image' : toolId === 20 ? 'audio' : 'video';
                        previewContent.innerHTML = `
                            <p><i class="fas fa-${fileType}" style="font-size: 3rem; color: var(--accent-cyan);"></i></p>
                            <p>${fileType.charAt(0).toUpperCase() + fileType.slice(1)} file processed successfully</p>
                            <p>Size: 5.7 MB  2.1 MB (63% reduction)</p>
                        `;
                    }
                    
                    // Show download button
                    if (downloadBtn) {
                        downloadBtn.style.display = 'inline-block';
                        downloadBtn.addEventListener('click', () => {
                            alert('In a real application, this would download the processed file. This is a frontend simulation.');
                        });
                    }
                }, 1500);
            }, 1000);
        }
        
        // Process utility tools
        function processUtilityTool(toolId) {
            const previewArea = document.getElementById('previewArea');
            const previewContent = document.getElementById('previewContent');
            
            previewArea.style.display = 'block';
            
            switch(toolId) {
                case 22: // QR Code Generator
                    const qrText = document.getElementById('qrText').value || 'Sample QR Code';
                    previewContent.innerHTML = `
                        <p>QR Code for: "${qrText}"</p>
                        <div style="width: 200px; height: 200px; background: linear-gradient(45deg, #12151a, #1c222d); margin: 0 auto; border-radius: 10px; display: flex; align-items: center; justify-content: center; position: relative;">
                            <div style="width: 160px; height: 160px; background-color: white; position: relative;">
                                <!-- Simulated QR pattern -->
                                <div style="position: absolute; width: 30px; height: 30px; background-color: black; top: 10px; left: 10px;"></div>
                                <div style="position: absolute; width: 30px; height: 30px; background-color: black; top: 10px; right: 10px;"></div>
                                <div style="position: absolute; width: 30px; height: 30px; background-color: black; bottom: 10px; left: 10px;"></div>
                                <div style="position: absolute; width: 10px; height: 100px; background-color: black; top: 50%; left: 50%; transform: translate(-50%, -50%);"></div>
                                <div style="position: absolute; width: 100px; height: 10px; background-color: black; top: 50%; left: 50%; transform: translate(-50%, -50%);"></div>
                            </div>
                        </div>
                        <p style="margin-top: 1rem; font-size: 0.9rem;">Scan this QR code with your device camera</p>
                    `;
                    break;
                    
                case 23: // Password Generator
                    const length = parseInt(document.getElementById('passwordLength').value) || 12;
                    const includeUppercase = document.getElementById('includeUppercase').checked;
                    const includeNumbers = document.getElementById('includeNumbers').checked;
                    const includeSymbols = document.getElementById('includeSymbols').checked;
                    
                    // Generate a sample password
                    const samplePassword = generatePassword(length, includeUppercase, includeNumbers, includeSymbols);
                    previewContent.innerHTML = `
                        <p>Your generated password:</p>
                        <div style="background-color: var(--bg-main); padding: 1.5rem; border-radius: 10px; margin: 1rem 0; font-family: monospace; font-size: 1.2rem; letter-spacing: 2px; text-align: center; border: 1px solid var(--accent-cyan);">
                            ${samplePassword}
                        </div>
                        <p>Password strength: <span style="color: #28a745;">Strong</span></p>
                        <p>Length: ${length} characters</p>
                        <button class="btn" id="copyPassword" style="margin-top: 1rem;">
                            <i class="far fa-copy"></i> Copy Password
                        </button>
                    `;
                    
                    document.getElementById('copyPassword').addEventListener('click', () => {
                        navigator.clipboard.writeText(samplePassword);
                        alert('Password copied to clipboard!');
                    });
                    break;
                    
                case 24: // Word Counter
                    const textToCount = document.getElementById('textToCount').value || '';
                    const words = textToCount.trim() ? textToCount.trim().split(/\s+/).length : 0;
                    const characters = textToCount.length;
                    const charactersNoSpaces = textToCount.replace(/\s/g, '').length;
                    
                    previewContent.innerHTML = `
                        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem; text-align: center;">
                            <div style="background-color: var(--bg-main); padding: 1rem; border-radius: 10px;">
                                <h4 style="color: var(--accent-cyan); margin-bottom: 0.5rem;">Words</h4>
                                <div style="font-size: 2rem; font-weight: bold;">${words}</div>
                            </div>
                            <div style="background-color: var(--bg-main); padding: 1rem; border-radius: 10px;">
                                <h4 style="color: var(--accent-cyan); margin-bottom: 0.5rem;">Characters</h4>
                                <div style="font-size: 2rem; font-weight: bold;">${characters}</div>
                            </div>
                            <div style="background-color: var(--bg-main); padding: 1rem; border-radius: 10px;">
                                <h4 style="color: var(--accent-cyan); margin-bottom: 0.5rem;">Characters (no spaces)</h4>
                                <div style="font-size: 2rem; font-weight: bold;">${charactersNoSpaces}</div>
                            </div>
                            <div style="background-color: var(--bg-main); padding: 1rem; border-radius: 10px;">
                                <h4 style="color: var(--accent-cyan); margin-bottom: 0.5rem;">Sentences</h4>
                                <div style="font-size: 2rem; font-weight: bold;">${textToCount.split(/[.!?]+/).length - 1}</div>
                            </div>
                        </div>
                    `;
                    break;
                    
                case 25: // Text to Speech
                    const textToSpeech = document.getElementById('textToSpeech').value || 'Hello, this is a text to speech demonstration.';
                    previewContent.innerHTML = `
                        <p>Text ready for speech synthesis:</p>
                        <div style="background-color: var(--bg-main); padding: 1rem; border-radius: 10px; margin: 1rem 0; max-height: 200px; overflow-y: auto;">
                            ${textToSpeech}
                        </div>
                        <p>Click play to hear the text spoken (simulated)</p>
                        <button class="btn btn-primary" id="playSpeech">
                            <i class="fas fa-volume-up"></i> Play Speech
                        </button>
                    `;
                    
                    document.getElementById('playSpeech').addEventListener('click', () => {
                        const playBtn = document.getElementById('playSpeech');
                        const originalHTML = playBtn.innerHTML;
                        playBtn.innerHTML = '<i class="fas fa-volume-up"></i> Playing...';
                        playBtn.disabled = true;
                        
                        // Simulate speech playback
                        setTimeout(() => {
                            playBtn.innerHTML = originalHTML;
                            playBtn.disabled = false;
                            alert('In a real application, this would use the Web Speech API to synthesize the text. This is a simulation.');
                        }, 2000);
                    });
                    break;
                    
                case 27: // Age Calculator
                    const birthDate = document.getElementById('birthDate').value;
                    const ageAtDate = document.getElementById('ageAtDate').value || new Date().toISOString().split('T')[0];
                    
                    if (!birthDate) {
                        previewContent.innerHTML = '<p style="color: #ff6b6b;">Please select a birth date</p>';
                        return;
                    }
                    
                    const birth = new Date(birthDate);
                    const target = new Date(ageAtDate);
                    let age = target.getFullYear() - birth.getFullYear();
                    const monthDiff = target.getMonth() - birth.getMonth();
                    
                    if (monthDiff < 0 || (monthDiff === 0 && target.getDate() < birth.getDate())) {
                        age--;
                    }
                    
                    const months = (target.getFullYear() - birth.getFullYear()) * 12 + target.getMonth() - birth.getMonth();
                    const days = Math.floor((target - birth) / (1000 * 60 * 60 * 24));
                    
                    previewContent.innerHTML = `
                        <div style="text-align: center;">
                            <div style="font-size: 3rem; color: var(--accent-cyan); font-weight: bold; margin: 1rem 0;">${age}</div>
                            <p>Years Old</p>
                            <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem; margin-top: 2rem;">
                                <div style="background-color: var(--bg-main); padding: 1rem; border-radius: 10px;">
                                    <h4 style="color: var(--accent-cyan); margin-bottom: 0.5rem;">Months</h4>
                                    <div style="font-size: 1.5rem; font-weight: bold;">${months}</div>
                                </div>
                                <div style="background-color: var(--bg-main); padding: 1rem; border-radius: 10px;">
                                    <h4 style="color: var(--accent-cyan); margin-bottom: 0.5rem;">Weeks</h4>
                                    <div style="font-size: 1.5rem; font-weight: bold;">${Math.floor(days / 7)}</div>
                                </div>
                                <div style="background-color: var(--bg-main); padding: 1rem; border-radius: 10px;">
                                    <h4 style="color: var(--accent-cyan); margin-bottom: 0.5rem;">Days</h4>
                                    <div style="font-size: 1.5rem; font-weight: bold;">${days}</div>
                                </div>
                            </div>
                        </div>
                    `;
                    break;
                    
                case 28: // BMI Calculator
                    const height = parseFloat(document.getElementById('height').value) || 170;
                    const weight = parseFloat(document.getElementById('weight').value) || 70;
                    const heightInMeters = height / 100;
                    const bmi = weight / (heightInMeters * heightInMeters);
                    let category = '';
                    let categoryColor = '';
                    
                    if (bmi < 18.5) {
                        category = 'Underweight';
                        categoryColor = '#ffc107';
                    } else if (bmi < 25) {
                        category = 'Normal';
                        categoryColor = '#28a745';
                    } else if (bmi < 30) {
                        category = 'Overweight';
                        categoryColor = '#fd7e14';
                    } else {
                        category = 'Obese';
                        categoryColor = '#dc3545';
                    }
                    
                    previewContent.innerHTML = `
                        <div style="text-align: center;">
                            <div style="font-size: 3rem; color: var(--accent-cyan); font-weight: bold; margin: 1rem 0;">${bmi.toFixed(1)}</div>
                            <p>BMI Score</p>
                            <div style="background-color: var(--bg-main); padding: 1rem; border-radius: 10px; margin: 1rem 0;">
                                <h4 style="color: ${categoryColor}; margin-bottom: 0.5rem;">${category}</h4>
                                <div style="height: 10px; background: linear-gradient(to right, #ffc107, #28a745, #fd7e14, #dc3545); border-radius: 5px; margin: 1rem 0; position: relative;">
                                    <div style="position: absolute; left: ${Math.min(bmi / 40 * 100, 100)}%; top: -5px; width: 20px; height: 20px; background-color: white; border-radius: 50%; border: 2px solid var(--accent-cyan);"></div>
                                </div>
                                <div style="display: flex; justify-content: space-between; font-size: 0.8rem;">
                                    <span>Underweight (<18.5)</span>
                                    <span>Normal (18.5-25)</span>
                                    <span>Overweight (25-30)</span>
                                    <span>Obese (>30)</span>
                                </div>
                            </div>
                            <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem; margin-top: 1rem;">
                                <div style="background-color: var(--bg-main); padding: 1rem; border-radius: 10px;">
                                    <h4 style="color: var(--accent-cyan); margin-bottom: 0.5rem;">Height</h4>
                                    <div style="font-size: 1.2rem;">${height} cm</div>
                                </div>
                                <div style="background-color: var(--bg-main); padding: 1rem; border-radius: 10px;">
                                    <h4 style="color: var(--accent-cyan); margin-bottom: 0.5rem;">Weight</h4>
                                    <div style="font-size: 1.2rem;">${weight} kg</div>
                                </div>
                            </div>
                        </div>
                    `;
                    break;
                    
                case 30: // Unit Converter
                    const converterType = document.getElementById('converterType').value;
                    const fromUnit = document.getElementById('fromUnit').value;
                    const toUnit = document.getElementById('toUnit').value;
                    const valueToConvert = parseFloat(document.getElementById('valueToConvert').value) || 1;
                    
                    // Simple conversion factors (simplified)
                    let result = valueToConvert;
                    
                    if (converterType === 'length') {
                        // Convert to meters first
                        let inMeters = valueToConvert;
                        if (fromUnit === 'kilometer') inMeters = valueToConvert * 1000;
                        if (fromUnit === 'mile') inMeters = valueToConvert * 1609.34;
                        
                        // Convert from meters to target
                        if (toUnit === 'kilometer') result = inMeters / 1000;
                        else if (toUnit === 'mile') result = inMeters / 1609.34;
                        else if (toUnit === 'foot') result = inMeters * 3.28084;
                        else if (toUnit === 'inch') result = inMeters * 39.3701;
                        else if (toUnit === 'yard') result = inMeters * 1.09361;
                        else result = inMeters; // meters
                    } else if (converterType === 'temperature') {
                        // Temperature conversions
                        if (fromUnit === 'celsius' && toUnit === 'fahrenheit') {
                            result = (valueToConvert * 9/5) + 32;
                        } else if (fromUnit === 'fahrenheit' && toUnit === 'celsius') {
                            result = (valueToConvert - 32) * 5/9;
                        } else if (fromUnit === 'celsius' && toUnit === 'kelvin') {
                            result = valueToConvert + 273.15;
                        } else if (fromUnit === 'kelvin' && toUnit === 'celsius') {
                            result = valueToConvert - 273.15;
                        }
                    }
                    
                    previewContent.innerHTML = `
                        <div style="text-align: center;">
                            <div style="font-size: 2.5rem; font-weight: bold; margin: 1rem 0;">
                                ${valueToConvert} ${fromUnit} = 
                                <span style="color: var(--accent-cyan);">${result.toFixed(4)}</span> ${toUnit}
                            </div>
                            <div style="background-color: var(--bg-main); padding: 1.5rem; border-radius: 10px; margin-top: 1.5rem;">
                                <h4 style="color: var(--accent-cyan); margin-bottom: 1rem;">Conversion Details</h4>
                                <p>Conversion type: <strong>${converterType}</strong></p>
                                <p>From: <strong>${fromUnit}</strong></p>
                                <p>To: <strong>${toUnit}</strong></p>
                            </div>
                        </div>
                    `;
                    break;
                    
                case 31: // JSON Formatter
                    const jsonInput = document.getElementById('jsonInput').value;
                    
                    try {
                        if (!jsonInput.trim()) {
                            throw new Error('JSON input is empty');
                        }
                        
                        const parsedJson = JSON.parse(jsonInput);
                        const formattedJson = JSON.stringify(parsedJson, null, 2);
                        
                        previewContent.innerHTML = `
                            <p>Valid JSON formatted successfully:</p>
                            <pre style="background-color: var(--bg-main); padding: 1rem; border-radius: 10px; overflow-x: auto; max-height: 300px; border: 1px solid rgba(66, 248, 245, 0.3);">${formattedJson}</pre>
                            <button class="btn" id="copyJson" style="margin-top: 1rem;">
                                <i class="far fa-copy"></i> Copy Formatted JSON
                            </button>
                        `;
                        
                        document.getElementById('copyJson').addEventListener('click', () => {
                            navigator.clipboard.writeText(formattedJson);
                            alert('JSON copied to clipboard!');
                        });
                    } catch (error) {
                        previewContent.innerHTML = `
                            <p style="color: #ff6b6b;">Invalid JSON: ${error.message}</p>
                            <p>Please check your JSON syntax and try again.</p>
                        `;
                    }
                    break;
                    
                default:
                    previewContent.innerHTML = `<p>Tool functionality for ${toolId} would be implemented here.</p>`;
            }
        }
        
        // Helper function to generate password
        function generatePassword(length, uppercase, numbers, symbols) {
            let chars = 'abcdefghijklmnopqrstuvwxyz';
            if (uppercase) chars += 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
            if (numbers) chars += '0123456789';
            if (symbols) chars += '!@#$%^&*()_+-=[]{}|;:,.<>?';
            
            let password = '';
            for (let i = 0; i < length; i++) {
                password += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            
            return password;
        }
        
        // Event Listeners
        hamburger.addEventListener('click', () => {
            navLinks.classList.toggle('active');
        });
        
        collapseSidebar.addEventListener('click', () => {
            sidebar.classList.toggle('active');
            collapseSidebar.innerHTML = sidebar.classList.contains('active') ? 
                '<i class="fas fa-chevron-up"></i>' : '<i class="fas fa-chevron-left"></i>';
        });
        
        closeModal.addEventListener('click', () => {
            toolModal.classList.remove('active');
            document.body.style.overflow = 'auto';
        });
        
        toolModal.addEventListener('click', (e) => {
            if (e.target === toolModal) {
                toolModal.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        });
        
        // Category toggle in sidebar
        categoryTitles.forEach(title => {
            title.addEventListener('click', () => {
                const category = title.getAttribute('data-category');
                const toolList = document.getElementById(`${category}Tools`);
                toolList.classList.toggle('active');
                
                const icon = title.querySelector('.fa-chevron-down');
                if (icon) {
                    icon.style.transform = toolList.classList.contains('active') ? 'rotate(180deg)' : 'rotate(0deg)';
                }
            });
        });
        
        // Explore Tools button
        document.getElementById('exploreTools').addEventListener('click', () => {
            document.querySelector('#tools').scrollIntoView({ behavior: 'smooth' });
        });
        
        // How It Works button
        document.getElementById('howItWorks').addEventListener('click', () => {
            alert('PDF Multi Tool Hub works entirely in your browser. No files are uploaded to servers - all processing happens locally using JavaScript. This ensures your data privacy and security.');
        });
        
        // Initialize the app
        document.addEventListener('DOMContentLoaded', () => {
            populateSidebarTools();
            populateToolsGrid();
            
            // Set current year in footer
            document.querySelector('.copyright p').innerHTML = `&copy; ${new Date().getFullYear()} Boxput Multi Tool Hub. All Rights Reserved.`;
        });
    </script>
</body>
</html>
