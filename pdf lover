        // DOM Elements
        const navLinks = document.getElementById('navLinks');
        const hamburger = document.getElementById('hamburger');
        const sidebar = document.getElementById('sidebar');
        const collapseSidebar = document.getElementById('collapseSidebar');
        const toolModal = document.getElementById('toolModal');
        const modalTitle = document.getElementById('modalTitle');
        const modalBody = document.querySelector('.modal-body');
        const closeModal = document.getElementById('closeModal');
        const toolsGrid = document.getElementById('toolsGrid');
        const categoryTitles = document.querySelectorAll('.category-title');
        const toolLists = document.querySelectorAll('.tool-list');
        
        // Populate sidebar tools
        function populateSidebarTools() {
            for (const category in tools) {
                const listElement = document.getElementById(`${category}Tools`);
                listElement.innerHTML = '';
                
                tools[category].forEach(tool => {
                    const listItem = document.createElement('li');
                    listItem.className = 'tool-item';
                    listItem.setAttribute('data-tool-id', tool.id);
                    listItem.innerHTML = `
                        <i class="fas ${tool.icon} tool-icon"></i>
                        <span>${tool.name}</span>
                    `;
                    listItem.addEventListener('click', () => openToolModal(tool.id));
                    listElement.appendChild(listItem);
                });
            }
        }
        
        // Populate main tools grid
        function populateToolsGrid() {
            toolsGrid.innerHTML = '';
            
            // Combine all tools into one array
            const allTools = [];
            for (const category in tools) {
                allTools.push(...tools[category]);
            }
            
            // Create tool cards
            allTools.forEach(tool => {
                const card = document.createElement('div');
                card.className = 'tool-card glow-hover';
                card.innerHTML = `
                    <div class="tool-card-header">
                        <div class="tool-card-icon">
                            <i class="fas ${tool.icon}"></i>
                        </div>
                        <h3>${tool.name}</h3>
                    </div>
                    <p>${tool.desc}</p>
                    <button class="btn open-tool-btn" data-tool-id="${tool.id}">
                        <i class="fas fa-external-link-alt"></i> Open Tool
                    </button>
                `;
                
                toolsGrid.appendChild(card);
            });
            
            // Add event listeners to tool buttons
            document.querySelectorAll('.open-tool-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const toolId = parseInt(e.target.closest('.open-tool-btn').getAttribute('data-tool-id'));
                    openToolModal(toolId);
                });
            });
        }
        
        // Open tool modal
        function openToolModal(toolId) {
            // Find the tool by ID
            let selectedTool = null;
            for (const category in tools) {
                const foundTool = tools[category].find(tool => tool.id === toolId);
                if (foundTool) {
                    selectedTool = foundTool;
                    break;
                }
            }
            
            if (!selectedTool) return;
            
            // Set modal title
            modalTitle.textContent = selectedTool.name;
            
            // Generate tool-specific UI
            let toolUI = '';
            
            if (selectedTool.id <= 17) {
                // PDF Tools
                toolUI = `
                    <div class="upload-area" id="uploadArea">
                        <i class="fas fa-cloud-upload-alt"></i>
                        <p>Drag and drop your ${selectedTool.name.includes('PDF') ? 'PDF files' : 'files'} here</p>
                        <p>or</p>
                        <button class="btn" id="browseFiles">
                            <i class="fas fa-folder-open"></i> Browse Files
                        </button>
                        <p class="file-info">Maximum file size: 50MB</p>
                    </div>
                    
                    <div class="status-message" id="statusMessage"></div>
                    
                    <div class="tool-controls">
                        <div class="control-group">
                            <label for="quality">Quality</label>
                            <select id="quality">
                                <option value="high">High</option>
                                <option value="medium" selected>Medium</option>
                                <option value="low">Low</option>
                            </select>
                        </div>
                        
                        <div class="control-group">
                            <label for="outputFormat">Output Format</label>
                            <select id="outputFormat">
                                <option value="pdf" ${selectedTool.name.includes('PDF') ? 'selected' : ''}>PDF</option>
                                <option value="docx" ${selectedTool.name.includes('Word') ? 'selected' : ''}>Word (.docx)</option>
                                <option value="jpg" ${selectedTool.name.includes('JPG') ? 'selected' : ''}>JPG</option>
                                <option value="pptx" ${selectedTool.name.includes('PowerPoint') ? 'selected' : ''}>PowerPoint</option>
                                <option value="xlsx" ${selectedTool.name.includes('Excel') ? 'selected' : ''}>Excel</option>
                            </select>
                        </div>
                    </div>
                    
                    <div style="text-align: center; margin-top: 2rem;">
                        <button class="btn btn-primary" id="processTool" style="padding: 1rem 2rem; font-size: 1.1rem;">
                            <i class="fas fa-cogs"></i> Process ${selectedTool.name}
                        </button>
                    </div>
                    
                    <div class="preview-area" id="previewArea" style="display: none;">
                        <h3>Preview</h3>
                        <div class="preview-content" id="previewContent">
                            <p>Your processed file will appear here</p>
                        </div>
                        <div style="text-align: center; margin-top: 1.5rem;">
                            <button class="btn" id="downloadBtn" style="display: none;">
                                <i class="fas fa-download"></i> Download Result
                            </button>
                        </div>
                    </div>
                `;
            } else if (selectedTool.id >= 18 && selectedTool.id <= 21) {
                // Image/Audio/Video Tools
                toolUI = `
                    <div class="upload-area" id="uploadArea">
                        <i class="fas ${selectedTool.icon}"></i>
                        <p>Drag and drop your ${selectedTool.name.includes('Image') ? 'image' : selectedTool.name.includes('Audio') ? 'audio' : 'video'} files here</p>
                        <p>or</p>
                        <button class="btn" id="browseFiles">
                            <i class="fas fa-folder-open"></i> Browse Files
                        </button>
                    </div>
                    
                    <div class="status-message" id="statusMessage"></div>
                    
                    <div class="tool-controls">
                        <div class="control-group">
                            <label for="compressionLevel">Compression Level</label>
                            <select id="compressionLevel">
                                <option value="10">Low (High Quality)</option>
                                <option value="50" selected>Medium (Balanced)</option>
                                <option value="90">High (Small Size)</option>
                            </select>
                        </div>
                        
                        ${selectedTool.id === 19 ? `
                        <div class="control-group">
                            <label for="targetFormat">Target Format</label>
                            <select id="targetFormat">
                                <option value="jpg">JPG</option>
                                <option value="png">PNG</option>
                                <option value="webp">WEBP</option>
                            </select>
                        </div>
                        ` : ''}
                    </div>
                    
                    <div style="text-align: center; margin-top: 2rem;">
                        <button class="btn btn-primary" id="processTool" style="padding: 1rem 2rem; font-size: 1.1rem;">
                            <i class="fas fa-cogs"></i> Process ${selectedTool.name}
                        </button>
                    </div>
                    
                    <div class="preview-area" id="previewArea" style="display: none;">
                        <h3>Preview</h3>
                        <div class="preview-content" id="previewContent">
                            <p>Your processed ${selectedTool.name.includes('Image') ? 'image' : selectedTool.name.includes('Audio') ? 'audio' : 'video'} will appear here</p>
                        </div>
                        <div style="text-align: center; margin-top: 1.5rem;">
                            <button class="btn" id="downloadBtn" style="display: none;">
                                <i class="fas fa-download"></i> Download Result
                            </button>
                        </div>
                    </div>
                `;
            } else {
                // Utility Tools
                toolUI = `
                    <div class="tool-controls">
                        ${selectedTool.id === 22 ? `
                        <!-- QR Code Generator -->
                        <div class="control-group">
                            <label for="qrText">Text/URL for QR Code</label>
                            <input type="text" id="qrText" placeholder="Enter text or URL">
                        </div>
                        <div class="control-group">
                            <label for="qrSize">QR Code Size</label>
                            <select id="qrSize">
                                <option value="128">128x128</option>
                                <option value="256" selected>256x256</option>
                                <option value="512">512x512</option>
                            </select>
                        </div>
                        ` : selectedTool.id === 23 ? `
                        <!-- Password Generator -->
                        <div class="control-group">
                            <label for="passwordLength">Password Length</label>
                            <input type="range" id="passwordLength" min="8" max="32" value="12">
                            <span id="lengthValue">12 characters</span>
                        </div>
                        <div class="control-group">
                            <label>
                                <input type="checkbox" id="includeUppercase" checked> Include Uppercase Letters
                            </label>
                            <label>
                                <input type="checkbox" id="includeNumbers" checked> Include Numbers
                            </label>
                            <label>
                                <input type="checkbox" id="includeSymbols"> Include Symbols
                            </label>
                        </div>
                        ` : selectedTool.id === 24 ? `
                        <!-- Word Counter -->
                        <div class="control-group">
                            <label for="textToCount">Enter Text</label>
                            <textarea id="textToCount" rows="10" placeholder="Paste or type your text here..."></textarea>
                        </div>
                        ` : selectedTool.id === 25 ? `
                        <!-- Text to Speech -->
                        <div class="control-group">
                            <label for="textToSpeech">Enter Text</label>
                            <textarea id="textToSpeech" rows="6" placeholder="Enter text to convert to speech..."></textarea>
                        </div>
                        <div class="control-group">
                            <label for="voiceSelect">Voice</label>
                            <select id="voiceSelect">
                                <option value="default">Default Voice</option>
                            </select>
                        </div>
                        <div class="control-group">
                            <label for="speechRate">Speech Rate</label>
                            <input type="range" id="speechRate" min="0.5" max="2" step="0.1" value="1">
                            <span id="rateValue">1.0</span>
                        </div>
                        ` : selectedTool.id === 26 ? `
                        <!-- Speech to Text -->
                        <div class="control-group">
                            <label for="speechLanguage">Language</label>
                            <select id="speechLanguage">
                                <option value="en-US">English (US)</option>
                                <option value="en-GB">English (UK)</option>
                                <option value="es-ES">Spanish</option>
                                <option value="fr-FR">French</option>
                            </select>
                        </div>
                        <div style="text-align: center; margin: 2rem 0;">
                            <button class="btn btn-primary" id="startRecording">
                                <i class="fas fa-microphone"></i> Start Recording
                            </button>
                            <button class="btn" id="stopRecording" style="display: none;">
                                <i class="fas fa-stop"></i> Stop Recording
                            </button>
                        </div>
                        ` : selectedTool.id === 27 ? `
                        <!-- Age Calculator -->
                        <div class="control-group">
